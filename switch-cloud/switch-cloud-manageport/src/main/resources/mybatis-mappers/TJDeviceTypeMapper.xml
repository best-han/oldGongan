<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.windaka.suizhi.manageport.dao.TJDeviceTypeDao">

    <!--新增统计－缴费信息-->
    <insert id="save" parameterType="com.windaka.suizhi.manageport.model.TJDeviceType">
        INSERT INTO tj_device_type(xq_code,device_code,device_name,
            cre_by,cre_time,upd_by,upd_time)
        values (#{xq_code}, #{device_code}, #{device_name}
                   ,#{cre_by},#{cre_time},#{upd_by},#{upd_time})

    </insert>

    <!--根据设备类型Code，查询设备类型信息-->
    <select id="query" parameterType="java.lang.String" resultType="com.windaka.suizhi.manageport.model.TJDeviceType">
        select id,device_code as deviceCode,device_name as deviceName,cre_by as creBy,cre_time as creTime,upd_by as updBy,upd_time as updTime
        from tj_device_type
        where device_code=#{deviceCode}
    </select>
</mapper>